<% if @jumbotron.exists? %>
	<% @jumbotron.each do |jumbotron| %>
		<% if params[:controller] == 'home' %>
			<% if jumbotron.display == 'home' || jumbotron.display == 'all' %>
				<!-- Main jumbotron for a primary marketing message or call to action -->
				<div class="jumbotron">
				<div class="container">
				  <% if jumbotron.show_title == true %>
				  <h1 class="display-3"><%= jumbotron.title %></h1>
	              <% end %>
				  <p><%= raw jumbotron.body %></p>
				</div>
				</div>
			<% end %>
		<% else %>
			<% if jumbotron.display == 'nohome' || jumbotron.display == 'all' %>
				<!-- Main jumbotron for a primary marketing message or call to action -->
				<div class="jumbotron">
				<div class="container">
				  <% if jumbotron.show_title == true %>
				  <h1 class="display-3"><%= jumbotron.title %></h1>
	              <% end %>
				  <p><%= raw jumbotron.body %></p>
				</div>
				</div>
			<% end %>

		<% end %>
	<% end %>
<% end %>